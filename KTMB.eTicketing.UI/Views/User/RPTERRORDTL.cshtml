
@{
    ViewBag.Title = "Failure Payment Transaction Report Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb bc-3">
    <li>
        <a href="{{UIURL}}/user/AdminDashboard"><i class="fa fa-home"></i>Home</a>
    </li>
    <li>
        Report Management
    </li>
    <li class="active">
        <strong>Failure Payment Transaction Report Detail</strong>
    </li>
</ol>
<h2>Failure Payment Transaction Report Detail</h2>
<u><a href="{{UIURL}}/user/RPTERROR">
 <span class="title">Failure Payment Transaction Report</span>
</a></u>
<br>


<div class="row" ng-controller="UserController as userCtrl">

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-primary" data-collapsed="0" style="background-color:#0053a0; border-color: #0053a0; color:whitesmoke;">
            <div class="panel-body">

                <form role="form" class="form-horizontal" style="margin-top: 15px;" ng-submit="getErrorReportDetail(rpt)">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="from" class="col-sm-4 control-label font-white">Transaction Date</label>
                            <div class="col-sm-8" ng-controller="DateController">
                                <input type="text" class="form-control" uib-datepicker-popup="dd/MM/yyyy" ng-click="open1()" ng-model="rpt.txDate" is-open="popup1.opened" ng-required="true" close-text="Close" alt-input-formats="altInputFormats" />
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="payment-type" class="col-sm-4 control-label font-white">Payment Type</label>
                            <div class="col-sm-8">
                                <select class="form-control" ng-model="rpt.paymentType" required>
                                    <option value="">Select Payment Type</option>
                                    <option value="C">Credit Card</option>
                                    <option value="U">Maybank2U</option>
                                    <option value="B">MyBSN</option>
                                    <option value="D">Mobile</option>
                                    <option value="A">All</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-8 col-sm-4">
                            <button type="submit" class="btn btn btn-warning" style="color:black;"><i class="glyphicon glyphicon-search"></i> Search</button>
                            <button type="reset" class="btn btn-success"><i class="glyphicon glyphicon-refresh"></i> Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <table datatable="ng" class="table table-bordered font-black" dt-options="dtOptionsExport">
            <thead>
                <tr>
                    <th>Total Unsuccess</th>
                    <th>Payment Type</th>
                    <th>Payment Code</th>
                    <th class="sorting_asc">Transaction Time</th>
                </tr>
            </thead>
            <tbody>
                <tr class="odd gradeX" ng-repeat="res in result.errorList">
                    <td class="center">{{res.UNSUCESSFULL}}</td>
                    <td class="center">{{res.PAYMENT}}</td>
                    <td class="center">{{res.TWT_PAYMENT_TYPE}}</td>
                    <td class="center">{{res.TIME}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

