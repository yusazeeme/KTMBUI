
@{
    ViewBag.Title = "View Ticket";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb bc-3">
    <li>
        <a href="{{UIURL}}/user/AdminDashboard"><i class="fa fa-home"></i>Home</a>
    </li>
    <li>
        User Management
    </li>
    <li class="active">
        <strong>View Ticket</strong>
    </li>
</ol>
<h2>View Ticket</h2>
<br>


<div class="row" ng-controller="UserController as userCtrl">

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="panel panel-primary" data-collapsed="0" style="background-color:#0053a0; border-color: #0053a0; color:whitesmoke;">
            <div class="panel-body">

                <form role="form" class="form-horizontal" style="margin-top: 15px;" ng-submit="viewTicket(tx)">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="from" class="col-sm-4 control-label font-white">Ref ID / Ticket ID</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" ng-model="tx.ticketId" required/>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <div class="col-sm-offset-4  col-sm-6">
                                <button type="submit" class="btn btn btn-warning" style="color:black;"><i class="glyphicon glyphicon-search"></i> Search</button>
                                <button type="reset" class="btn btn-success"><i class="glyphicon glyphicon-refresh"></i> Reset</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <table datatable="ng" class="table table-bordered font-black">
            <thead>
                <tr>
                    <th>Ref ID</th>
                    <th>Ticket ID</th>
                    <th>Booking Date</th>
                    <th>Depature</th>
                    <th>Arrival</th>
                    <th>Origin</th>
                    <th>Destination</th>
                    <th>Train No</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="booking in bookingList | orderBy :'+RefId'">
                    <td style="width:85px">{{booking.RefId}}</td>
                    <td>
                        <span ng-repeat="ticket in booking.TicketList">
                            {{ticket.TicketId}}<br />
                        </span>
                    </td>
                    <td>
                        <span ng-repeat="ticket in booking.TicketList">
                            {{ticket.TarikhBook | date:'dd/MM/yyyy'}}<br />
                        </span>
                    </td>
                    <td>
                        <span ng-repeat="ticket in booking.TicketList">
                            {{ticket.Departure}}<br />
                        </span>
                    </td>
                    <td>
                        <span ng-repeat="ticket in booking.TicketList">
                            {{ticket.Arrival}}<br />
                        </span>
                    </td>
                    <td>
                        <span ng-repeat="ticket in booking.TicketList">
                            {{ticket.Origin}}<br />
                        </span>
                    </td>
                    <td>
                        <span ng-repeat="ticket in booking.TicketList">
                            {{ticket.Destination}}<br />
                        </span>
                    </td>
                    <td>
                        <span ng-repeat="ticket in booking.TicketList">
                            {{ticket.TrainNo}}<br />
                        </span>
                    </td>
                    <td>
                        <a href="{{UIURL}}/ticket/print/{{booking.RefId}}" target="_blank"><i class="fa fa-print"></i> Reprint Ticket</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

