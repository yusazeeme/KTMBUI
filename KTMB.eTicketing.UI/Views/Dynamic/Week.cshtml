                <div class="panel-heading">
                    <div class="panel-title">
                        @*<a href="#" data-toggle="modal" data-target="#modal-1" class="btn btn-default">Add New</a>*@
                    </div>
                </div>
                <table class="table table-bordered font-black">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Code</th>
                            <th>Time of travel</th>
                            <th>Week Type</th>
                            <th>Description</th>
                            <th>Rate</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="odd gradeX" ng-repeat="obj in totWeek">
                            <td class="center">{{obj.Id}}</td>
                            <td class="center">{{obj.Code}}</td>
                            <td class="center">{{obj.PeakType}}</td>
                            <td class="center">{{obj.WeekType }}</td>
                            <td class="center">{{obj.Description}}</td>
                            <td class="center">{{obj.Rate}}</td>
                            <td class="center">{{obj.Status}}</td>
                            <td style="width:100px">
                                <a href="#" data-toggle="modal" data-target="#modal-1" class="btn btn-success" ng-click="edit(obj)"><i class="fa fa-edit"></i> </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>


        <!-- Modal 1 (Basic)-->
        <div class="modal fade" id="modal-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Add New Week Setting</h4>
                    </div>
                    <form role="form" class="form-horizontal form-groups-bordered" ng-submit="save()">
                        <div class="panel panel-primary" data-collapsed="0">
                            <div class="panel-body">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Code</label>
                                    <div class="col-sm-8">
                                        <input type="text" readonly class="form-control" required ng-model="form.Code ">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Time of travel</label>
                                    <div class="col-sm-8">
                                        <input type="text" readonly class="form-control" required ng-model="form.PeakType ">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Week Type</label>
                                    <div class="col-sm-8">
                                        <input type="text" readonly class="form-control" required ng-model="form.WeekType ">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Description</label>
                                    <div class="col-sm-8">
                                        <input type="text" readonly class="form-control" required ng-model="form.Description ">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Rate</label>
                                    <div class="col-sm-8">
                                        <input type="number" class="form-control" required ng-model="form.Rate">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Status</label>
                                    <div class="col-sm-8">
                                        <input type="number" class="form-control" required ng-model="form.Rate">
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-info">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


