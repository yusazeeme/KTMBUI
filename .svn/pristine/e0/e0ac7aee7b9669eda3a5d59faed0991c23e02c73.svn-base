
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="UserController as userCntrl">
    <div class="inner-body">
        <div class="login_wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-3 col-md-6 col-md-offset-3">
                        <div class="login-widget animte-reavel">
                            <div class="sec-img">
                                <h3>Forgot Password</h3>
                            </div>

                            <div class="login-box">                         
                                <form ng-submit="resetPassword(email)">
                                    <div class="form-group">
                                        <span><i class="fa fa-envelope"></i></span>
                                        <input type="email" class="form-control" ng-model="email" placeholder="Registered Email*" required />
                                    </div>                                    
                                    <div class="form-actions clearfix">
                                        <div class="submit-form" style="text-align: right">
                                            <button class="btn submit-btn" type="submit">Forgot Password</button>                                            
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="register">
                                <p ng-show="isGuest!=true">All good? <a href="{{UIURL}}/user/login">Log in now</a> </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

