
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="UserController as userCntrl" ng-init="signOut()">
    <div class="inner-body">
        <div class="login_wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-md-offset-3 col-md-6 col-md-offset-3">
                        <div class="login-widget">
                            <div class="sec-img">
                                <h3>Recover Password</h3>
                            </div>

                            <div class="login-box">
                                <form>
                                    <div class="form-group">
                                        <span> <i class="fa fa-envelope"></i></span> <input type="email" class="form-control" placeholder="Enter Email" name="email" required="required">
                                    </div>
                                    <div class="form-actions clearfix">
                                        <div class="submit-form text-center">
                                            <a href="#" class="btn submit-btn">Reset Password</a>
                                        </div>

                                    </div>
                                </form>
                            </div>
                            <div class="register">
                                <p>Already have an account? <a href="log_in.html"> log In</a> </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--inner body end from here-->
    </div>