
@{
    ViewBag.Title = "OurServices";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<div ng-controller="CMSController as cmsCtrl">
    <ol class="breadcrumb bc-3">
        <li>
            <a href="index.html"><i class="fa-home"></i>Home</a>
        </li>
        <li>
            <a href="forms-main.html">Forms</a>
        </li>
        <li class="active">
            <strong>Our Services</strong>
        </li>
    </ol>

    <h2>Our Services</h2>
    <br />

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary" data-collapsed="0">
                <div class="panel-heading">
                    <div class="panel-title">
                        Our Services
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                         <div class="row">
                            <div class="col-md-12">
                                <a href="javascript:;" onclick="jQuery('#modal-1').modal('show');" class="btn btn-default">Add New</a>
                            </div>
                        </div>
                        <br />
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Services Name</th>
                                    <th>Services Content</th>
                                    <th>Services Link</th>
                                    <th>File</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="modal-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form role="form" class="form-horizontal form-groups-bordered">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Our Services</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Services Name</label>
                                <div class="col-sm-5">
                                    <textarea class="form-control" id="field-ta" placeholder="Textarea"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Services Content</label>
                                <div class="col-sm-5">
                                    <textarea class="form-control" id="field-ta" placeholder="Textarea"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">Services Link</label>
                                <div class="col-sm-5">
                                    <textarea class="form-control" id="field-ta" placeholder="Textarea"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="field-1" class="col-sm-3 control-label">File</label>
                                <div class="col-sm-5">
                                    <input type="file" class="form-control" id="field-file" placeholder="Placeholder">
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-info">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


