
@{
    ViewBag.Title = "ImageSlider";
    Layout = "~/Views/Shared/_CMSLayout.cshtml";
}

<ol class="breadcrumb bc-3">
    <li>
        <a href="index.html"><i class="fa-home"></i>Home</a>
    </li>
    <li>

        <a href="forms-main.html">Forms</a>
    </li>
    <li class="active">

        <strong>Image Slider</strong>
    </li>
</ol>

<h2>Image Slider</h2>
<br />

<div class="row">
    <div class="col-md-12">

        <div class="panel panel-primary" data-collapsed="0">

            <div class="panel-heading">
                <div class="panel-title">
                    Default Form Inputs
                </div>
            </div>

            <div class="panel-body">

                <div class="col-md-12">

                    <h4>Bordered Table</h4>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="javascript:;" onclick="jQuery('#modal-1').modal('show');" class="btn btn-default">Add New</a>
                        </div>
                    </div>
                    <br />

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Image Name</th>
                                <th>Image Path</th>
                                <th>File Field</th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>

                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>

                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>

        </div>

    </div>

    <div class="modal fade" id="modal-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form role="form" class="form-horizontal form-groups-bordered">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Image Slider</h4>
                    </div>

                    <div class="modal-body">
                        <div class="form-group">
                            <label for="field-1" class="col-sm-3 control-label">Image Name</label>

                            <div class="col-sm-5">
                                <textarea class="form-control" id="field-ta" placeholder="Textarea"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="field-1" class="col-sm-3 control-label">Image Path</label>

                            <div class="col-sm-5">
                                <textarea class="form-control" id="field-ta" placeholder="Textarea"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="field-1" class="col-sm-3 control-label">File Field</label>

                            <div class="col-sm-5">
                                <input type="file" class="form-control" id="field-file" placeholder="Placeholder">
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-info">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




